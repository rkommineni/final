<div class='container'>
  <h2>Welcome!</h2>
</div>

<div class='row'>
  <!-- RENDER THE FORM PARTIAL HERE. -->
  <%= form_tag "/users" do%>
  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
    <input class="form-control" type="text" placeholder="Full Name" name="name">
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <input class="form-control" type="text" placeholder="Email address" name="email">
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></i></span>
    <input class="form-control" type="text" placeholder="User name" name="username">
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></i></span>
    <input class="form-control" type="text" placeholder="Image url" name="image_url">
  </div>
  <br>

  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <input class="form-control" type="password" placeholder="Password" name="password">
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <input class="form-control" type="password" placeholder="Confirm Password" name="password_confirmation">
  </div>
  <br>
  <%= submit_tag "Register" %>

<% end %>
</div>
