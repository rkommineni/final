<div class='container'>
  <h2>Welcome!</h2>
</div>

<% if @user.errors.any? %>
  <div class="alert alert-dismissable alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class='row'>
  <!-- RENDER THE FORM PARTIAL HERE. -->
  <%= form_tag "/users" do%>
  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
    <input class="form-control" type="text" value="<%= @user.name%>" placeholder="Full Name" name="name" required>
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <input class="form-control" type="text" value="<%= @user.email%>" placeholder="Email address" name="email" required>
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></i></span>
    <input class="form-control" type="text" value="<%= @user.username%>" placeholder="User name" name="username" required>
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></i></span>
    <input class="form-control" type="text" value="<%= @user.image_url%>" placeholder="Image url" name="image_url">
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <input class="form-control" type="password" value="<%= @user.password%>" placeholder="Password" name="password" required>
  </div>
  <br>

  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <input class="form-control" type="password" value="<%= @user.password_confirmation%>" placeholder="Confirm Password" name="password_confirmation" required>
  </div>
  <br>
  <%= submit_tag "Register" %>

<% end %>
</div>

<script>
  $("form").validate();
</script>
