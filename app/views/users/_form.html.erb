<!-- Stylize this form -->

<!-- use patch for updates and also use the code to display database errors -->

<%= form_tag "/users" do%>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <br>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :image_url %>
  <%= text_field_tag :image_url %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Register!" %>

<% end %>
