<!-- need to make sure the books under each category is the popular books -->
<!-- also need to cut the title if the characters is too long -->
<br>
<div>
<h2> Today's Top 4 Genres </h2>
</div>
<div class = "row">
  <% @top_genre.each do |g, c| %>
    <div class = "col-md-3" >
    <h4> <%= g %> </h4>
    <% counter = 0 %>
    <% @books.each do |book| %>
      <% if book.genre == g && counter < 4 %>
        <p><a href = "/books/<%= book.id %>"> <%= book.title %> </a></p>
        <% counter = counter + 1 %>
      <% end %>
    <% end %> </div>
  <% end %>
</div>




<div>
<h2> Author, Book and Comments </h2>
</div>
<div class = "row">
  <div class = "col-md-3">
    <h4> Newly Published Books </h4>
    <% @new_books.each do |book| %>
      <p><a href = "/books/<%= book.id %>"> <%= book.title %> </a></p>
    <% end %>
  </div>

  <div class = "col-md-3">
    <h4> Productive Authors </h4>
    <% @authors.each do |a, c| %>    
      <p><a href = "/users/<%= a.id %>"> <%= a.name %> </a></p>
    <% end %>
  </div>

  <div class = "col-md-3">
    <h4> Top Rating Books </h4>
    <% @rating_counts.each do |b, c| %>
      <p><a href = "/books/<%= b.id %>"> <%= b.title %> </a></p>
    <% end %>
  </div>

  <div class = "col-md-3">
    <h4> Most Commented Books </h4>
    <% @comment_counts.each do |b, c| %>
      <p><a href = "/books/<%= b.id %>"> <%= b.title %> </a></p>
    <% end %>
  </div>
</div>


